{
  "name": "elastic-builder",
  "version": "0.0.0-development",
  "description": "A JavaScript implementation of the elasticsearch Query DSL",
  "main": "lib/index.js",
  "files": [
    "browser/",
    "lib/",
    "src/",
    "repl.js",
    "index.d.ts"
  ],
  "types": "./src/index.d.ts",
  "scripts": {
    "build:babel": "cross-env BABEL_ENV=production babel src --out-dir lib",
    "build:umd": "webpack lib browser/elastic-builder.min.js",
    "build:docs": "documentation build src/index.js --github -o docs -f html -c ./docs/documentation.yml --name elastic-builder",
    "build": "npm run build:babel && npm run build:umd && npm run build:docs",
    "lint": "eslint src test",
    "lint:fix": "npm run lint -- --fix",
    "lint-staged": "lint-staged",
    "cz": "git-cz",
    "cz:retry": "git-cz --retry",
    "pretest:src": "cross-env NODE_ENV=test webpack --config webpack.config.test.js",
    "test:src": "cross-env NODE_ENV=test nyc --cache ava _build --concurrency 3",
    "test:typedef": "tsc --noEmit ./test/typedef.test.ts",
    "test": "npm run test:src && npm run test:typedef",
    "check": "npm run lint && npm test",
    "report": "nyc report --reporter=html",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "pregit-commit": "git add docs browser",
    "git-commit": "cross-env git commit --no-verify -m \"docs: Build docs for v$npm_package_version\"",
    "postgit-commit": "git push origin master",
    "push-assets": "npm run build && npm run git-commit"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sudo-suhas/elastic-builder.git"
  },
  "keywords": [
    "elasticsearch",
    "elastic-builder",
    "querying",
    "queries",
    "query",
    "elastic",
    "search",
    "elasticjs",
    "ejs",
    "dsl"
  ],
  "author": "Suhas Karanth <sudo.suhas@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sudo-suhas/elastic-builder/issues"
  },
  "homepage": "https://elastic-builder.js.org",
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix",
      "git add"
    ],
    "test/**/*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "nyc": {
    "sourceMap": false,
    "instrument": false
  },
  "pre-commit": {
    "colors": true,
    "run": [
      "lint-staged"
    ]
  },
  "devDependencies": {
    "ava": "^0.22.0",
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-loader": "^7.1.1",
    "babel-plugin-istanbul": "^4.1.3",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-register": "^6.24.1",
    "commitizen": "^2.9.6",
    "coveralls": "^2.13.1",
    "cross-env": "^5.0.1",
    "cz-conventional-changelog": "^2.0.0",
    "documentation": "^5.2.0",
    "eslint": "^4.4.1",
    "eslint-config-chatur": "^1.2.0",
    "eslint-config-prettier": "^2.3.0",
    "eslint-plugin-ava": "^4.2.1",
    "eslint-plugin-prettier": "^2.1.2",
    "glob": "^7.1.1",
    "lint-staged": "^4.0.1",
    "lodash": "^4.17.4",
    "nyc": "^11.0.3",
    "pre-commit": "^1.2.2",
    "prettier": "^1.5.3",
    "sinon": "^3.1.0",
    "typescript": "^2.4.2",
    "webpack": "^3.1.0",
    "webpack-node-externals": "^1.6.0"
  },
  "dependencies": {
    "babel-runtime": "^6.23.0",
    "lodash.has": "^4.5.2",
    "lodash.hasin": "^4.5.2",
    "lodash.head": "^4.0.1",
    "lodash.isempty": "^4.4.0",
    "lodash.isnil": "^4.0.0",
    "lodash.isobject": "^3.0.2",
    "lodash.isstring": "^4.0.1",
    "lodash.omit": "^4.5.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
