{
  "tabWidth": 4,
  "semi": true,
  "singleQuote": true,
  "trailingComma": "none",
  "proseWrap": "preserve",
  "arrowParens": "avoid",
  "printWidth": 80,
  "overrides": [
    {
      "files": "*.md",
      "options": {
        "tabWidth": 2,
        "proseWrap": "always"
      }
    },
    {
      "files": "*.json",
      "options": {
        "tabWidth": 2
      }
    }
  ]
}
